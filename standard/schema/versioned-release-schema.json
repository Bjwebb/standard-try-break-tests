{
    "id": "https://raw.githubusercontent.com/open-contracting/standard/master/standard/schema/versioned-release-schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "ocid": {
            "type": "string"
        },
        "releaseID": {
            "type": "string"
        },
        "releaseDate": {
            "type": "string",
            "format": "date-time"
        },
        "releaseTag": {
            "type": "string",
            "enum": ["planning", "tenderNotice", "awardNotice", "contractSignature", "contractAmendment", "report", "spending", "terminationNotice", "compiled"]
        },
        "language": {
            "mergeStrategy": "ocdsVersion",
            "type": ["string", "null"],
            "default": "en"
        },
        "buyer": { 
            "$ref": "#/definitions/organization" 
        },
        "planning": { 
           "$ref": "#/definitions/planning" 
        },
        "formationType": {
            "type": "string",
            "enum": ["tender"]
        },
        "tender": {
            "$ref": "#/definitions/tender" 
        },
        "awards": { 
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {"match_key": "awardID"},
            "type": "array",
            "items": { "$ref": "#/definitions/award" },
            "uniqueItems": true
        },
        "contracts": { 
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {"match_key": "contractID"},
            "type": "array",
            "items": {"$ref": "#/definitions/contract" },
            "uniqueItems": true
        },
        "performance": { "$ref": "#/definitions/performance" }
    },
    "required": ["ocid", "releaseID", "releaseDate", "releaseTag"],
    "definitions": {
        "identifier": {
            "type": "object",
            "properties": {
                "name": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "string"
                },
                "scheme": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "uid": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "uri": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format" : "uri"
                }
            },
            "patternProperties": {
                "^(name_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            },
            "required": ["name"]
        },
        "address": {
            "type": "object",
            "properties": {
                "post-office-box": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "extended-address": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "street-address": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "locality":{
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "region": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "postal-code": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "country-name": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            },
            "patternProperties": {
                "^(country-name_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            },
            "required": ["locality", "region", "country-name"],
            "dependencies": {
                "post-office-box": ["street-address"],
                "extended-address": ["street-address"]
            }
        },
        "organization": {
            "type": "object",
            "properties": {
                "id": { "$ref": "#/definitions/identifier" },
                "address": { "$ref": "#/definitions/address" }
            }
        },
        "item": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "classificationScheme": {
                    "type": ["string", "null"],
                    "enum": ["CPV", "GSIN", "UNSPSC", "Other"]
                },
                "otherClassificationScheme": {
                    "type": ["string", "null"]
                },
                "classificationID": {
                    "type": ["string", "null"]
                },
                "classificationDescription": {
                    "type": ["string", "null"]
                },
                "unitOfMeasure": {
                    "type": ["string", "null"]
                },
                "quantity": {
                    "type": ["integer", "null"]
                },
                "valuePerUnit": { 
                    "__comment": "This is unversioned, as all items in item array will be versioned.",
                    "type": "object",
                    "properties": {
                        "amount": {
                            "mergeStrategy": "ocdsVersion",
                            "type": ["number", "null"],
                            "minimum": 0
                        },
                        "currency": {
                            "mergeStrategy": "ocdsVersion",
                            "type": ["string", "null"],
                            "minLength": 3,
                            "maxLength": 3
                        }
                    }
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                },
                "^(classificationDescription_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "milestone": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "date": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "dateType": {
                    "type": ["string", "null"],
                    "enum": ["due", "completed"]
                },
                "attachments": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/attachment" }
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "performance": {
            "type": "object",
            "properties": {
                "transactions": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "transactionDataPackageURI": {
                                "mergeStrategy": "ocdsVersion",
                                "type": "string",
                                "format": "uri"
                            },
                            "transactionID": {
                                "mergeStrategy": "ocdsVersion",
                                "type": "string"
                            },
                            "transactionAmount": {
                                "mergeStrategy": "ocdsVersion",
                                "type": ["number", "null"]
                            }
                        },
                        "required": ["transactionDataPackageURI", "transactionID"]
                    }
                },
                "milestones": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/milestone" }
                },
                "reports":{
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/attachment"}
                }
            }
        },
        "planning": {
            "type": "object",
            "properties": {
                "budgetDataPackageURI": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "budgetID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "budgetAmount": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["number", "null"]
                },
                "publicHearingNotices": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/notice" },
                    "uniqueItems": true
                },
                "strategicJustificiation": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "anticipatedMilestones": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/milestone" }
                }
            },
            "patternProperties": {
                "^(strategicJustificiation_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            },
            
            "dependencies": {
                "budgetID": ["budgetDataPackageURI"],
                "budgetAmount": ["budgetDataPackageURI"]
            }
        },
        "tender": {
            "type": "object",
            "required": ["tenderID"],
            "properties": {
                "tenderID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "string"
                },
                "notice": { "$ref": "#/definitions/notice" },
                "itemsToBeProcured": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/item" },
                    "uniqueItems": true
                },
                "totalValue": {
                    "$ref": "#/definitions/value"
                },
                "method": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Open", "Selective", "Limited"]
                },
                "methodJustification": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "selectionCriteria": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Lowest Cost", "Best Proposal", "Best Value to Government", "Single bid only"]
                },
                "selectionDetails": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "submissionMethod": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Electronic Auction", "Electronic Submission", "Written", "In Person"]
                },
                "submissionDetails" : {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "tenderPeriod": {
                    "$ref": "#/definitions/period"
                },
                "clarificationPeriod": {
                    "$ref": "#/definitions/period"
                },
                "clarifications": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["boolean", "null"]
                },
                "awardPeriod": {
                    "$ref": "#/definitions/period"
                },
                "numberOfBidders": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["integer", "null"]
                },
                "numberOfBids": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["integer", "null"]
                },
                "bidders": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/organization" },
                    "uniqueItems": true
                },
                "procuringEntity": { 
                    "$ref": "#/definitions/organization" 
                },
                "attachments": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/attachment" },
                    "uniqueItems": true
                }
            },
            "patternProperties": {
                "^(methodJustification_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "^(selectionMethod_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "^(submissionDetails_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }

            }
        },
        "award": {
            "type": "object",
            "required": ["awardID"],
            "properties": {
                "awardID": { 
                    "type": "string"
                },
                "notice": { "$ref": "#/definitions/notice" },
                "awardDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "awardValue": {
                    "$ref": "#/definitions/value"
                },
                "suppliers": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/organization" },
                    "uniqueItems": true
                },
                "itemsAwarded": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/item" },
                    "uniqueItems": true
                }
            } 
        },
        "contract": {
            "type": "object",
            "required": ["contractID"],
            "properties": {
                "contractID": { 
                    "type": "string"
                },
                "awardID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "contractPeriod": {
                    "$ref": "#/definitions/period"
                },
                "contractValue": {
                    "$ref": "#/definitions/value"
                },
                "isAmendment": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["boolean", "null"]
                },
                "amendment": { "$ref": "#/definitions/amendment" },
                "itemsContracted": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/item" },
                    "uniqueItems": true
                },
                "deliverables": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/deliverable" },
                    "uniqueItems": true
                },
                "signatureDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "attachments": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/attachment" },
                    "uniqueItems": true
                }
            }
        },
        "notice": {
            "type": "object",
            "properties": {
                "id": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "uri": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "publishedDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "isAmendment": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "type": ["boolean", "null"]
                },
                "amendment": { "$ref": "#/definitions/amendment" }
            }
        },
        "amendment": {
            "type": "object",
            "properties": {
                "amendmentDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "amendedFields": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "justification": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            }
        },
        "period": {
            "type": "object",
            "properties": {
                "startDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "endDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                }
            }
        },
        "attachment": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "uri": {
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "lastModified": {
                    "type": ["string", "null"],
                    "format": "date-time"
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "value": {
            "type": "object",
            "properties": {
                "amount": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["number", "null"],
                    "minimum": 0
                },
                "currency": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "minLength": 3,
                    "maxLength": 3
                }
            }
        },
        "deliverable": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "dueDate": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "attachment": {
                    "$ref": "#/definitions/attachment"
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        }
    }
}
