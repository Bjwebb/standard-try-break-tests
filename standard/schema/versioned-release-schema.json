{
    "id": "https://raw.githubusercontent.com/open-contracting/standard/master/standard/schema/versioned-release-schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "ocid": {
            "type": "string"
        },
        "releaseID": {
            "type": "string"
        },
        "releaseDate": {
            "type": "string",
            "format": "date-time"
        },
        "releaseTag": {
            "type": "string",
            "enum": ["planning", "tenderNotice", "awardNotice", "contractSignature", "contractAmendment", "report", "spending", "terminationNotice", "compiled"]
        },
        "language": {
            "mergeStrategy": "ocdsVersion",
            "type": ["string", "null"],
            "default": "en"
        },
        "buyer": { 
            "mergeStrategy": "ocdsVersion",
            "$ref": "#/definitions/Organization" 
        },
        "planning": { 
           "$ref": "#/definitions/Planning" 
        },
        "formationType": {
            "type": "string",
            "enum": ["tender"]
        },
        "tender": {
            "$ref": "#/definitions/Tender" 
        },
        "awards": { 
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {"idRef": "awardID"},
            "type": "array",
            "items": { "$ref": "#/definitions/Award" },
            "uniqueItems": true
        },
        "contracts": { 
            "mergeStrategy": "arrayMergeById",
            "mergeOptions": {"idRef": "contractID"},
            "type": "array",
            "items": {"$ref": "#/definitions/Contract" },
            "uniqueItems": true
        },
        "performance": { "$ref": "#/definitions/Performance" }
    },
    "required": ["ocid", "releaseID", "releaseDate", "releaseTag"],
    "definitions": {
        "Identifier": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "scheme": {
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "uid": {
                    "type": ["string", "integer", "null"]
                },
                "uri": {
                    "type": ["string", "null"],
                    "format" : "uri"
                }
            },
            "patternProperties": {
                "^(name_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            },
            "required": ["name"]
        },
        "Address": {
            "type": "object",
            "properties": {
                "streetAddress": {
                    "type": ["string", "null"]
                },
                "locality":{
                    "type": ["string", "null"]
                },
                "region": {
                    "type": ["string", "null"]
                },
                "postalCode": {
                    "type": ["string", "null"]
                },
                "countryName": {
                    "type": ["string", "null"]
                }
            },
            "patternProperties": {
                "^(countryName_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "Organization": {
            "type": "object",
            "properties": {
                "id": { "$ref": "#/definitions/Identifier" },
                "address": { "$ref": "#/definitions/Address" }
            }
        },
        "Item": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "classificationScheme": {
                    "type": ["string", "null"],
                    "enum": ["CPV", "GSIN", "UNSPSC", "Other", null]
                },
                "otherClassificationScheme": {
                    "type": ["string", "null"]
                },
                "classificationID": {
                    "type": ["string", "null"]
                },
                "classificationDescription": {
                    "type": ["string", "null"]
                },
                "unitOfMeasure": {
                    "type": ["string", "null"]
                },
                "quantity": {
                    "type": ["integer", "null"]
                },
                "valuePerUnit": { 
                    "__comment": "This is unversioned, as all items in item array will be versioned.",
                    "__skip_validation": true,
                    "type": "object",
                    "properties": {
                        "amount": {
                            "type": ["number", "null"],
                            "minimum": 0
                        },
                        "currency": {
                            "type": ["string", "null"]
                        }
                    }
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                },
                "^(classificationDescription_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "Milestone": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "date": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "dateType": {
                    "type": ["string", "null"],
                    "enum": ["due", "completed", null]
                },
                "attachments": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/Attachment" }
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "Performance": {
            "type": "object",
            "properties": {
                "transactions": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "transactionDataPackageURI": {
                                "mergeStrategy": "ocdsVersion",
                                "type": "string",
                                "format": "uri"
                            },
                            "transactionID": {
                                "mergeStrategy": "ocdsVersion",
                                "type": "string"
                            },
                            "transactionAmount": {
                                "mergeStrategy": "ocdsVersion",
                                "type": ["number", "null"]
                            }
                        },
                        "required": ["transactionDataPackageURI", "transactionID"]
                    }
                },
                "milestones": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Milestone" }
                },
                "reports":{
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Attachment"}
                }
            }
        },
        "Planning": {
            "type": "object",
            "properties": {
                "budgetDataPackageURI": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "budgetID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "budgetAmount": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["number", "null"]
                },
                "publicHearingNotice": {
                    "$ref": "#/definitions/Notice"
                },
                "rationale": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "anticipatedMilestones": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Milestone" }
                }
            },
            "patternProperties": {
                "^(strategicJustificiation_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            },
            
            "dependencies": {
                "budgetID": ["budgetDataPackageURI"],
                "budgetAmount": ["budgetDataPackageURI"]
            }
        },
        "Tender": {
            "type": "object",
            "required": ["tenderID"],
            "properties": {
                "tenderID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "string"
                },
                "notice": { "$ref": "#/definitions/Notice" },
                "itemsToBeProcured": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/Item" },
                    "uniqueItems": true
                },
                "totalValue": {
                    "$ref": "#/definitions/Value"
                },
                "method": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Open", "Selective", "Limited", null]
                },
                "methodJustification": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "selectionCriteria": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Lowest Cost", "Best Proposal", "Best Value to Government", "Single bid only", null]
                },
                "selectionDetails": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "submissionMethod": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "enum": ["Electronic Auction", "Electronic Submission", "Written", "In Person", null]
                },
                "submissionDetails" : {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "tenderPeriod": {
                    "$ref": "#/definitions/Period"
                },
                "clarificationPeriod": {
                    "$ref": "#/definitions/Period"
                },
                "clarifications": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["boolean", "null"]
                },
                "awardPeriod": {
                    "$ref": "#/definitions/Period"
                },
                "numberOfBidders": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["integer", "null"]
                },
                "numberOfBids": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["integer", "null"]
                },
                "bidders": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Organization" },
                    "uniqueItems": true
                },
                "procuringEntity": { 
                    "mergeStrategy": "ocdsVersion",
                    "$ref": "#/definitions/Organization" 
                },
                "attachments": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Attachment" },
                    "uniqueItems": true
                }
            },
            "patternProperties": {
                "^(methodJustification_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "^(selectionMethod_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "^(submissionDetails_[A-Za-z]{2})$": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }

            }
        },
        "Award": {
            "type": "object",
            "required": ["awardID"],
            "properties": {
                "awardID": { 
                    "type": "string"
                },
                "notice": { "$ref": "#/definitions/Notice" },
                "awardDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "awardValue": {
                    "$ref": "#/definitions/Value"
                },
                "suppliers": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Organization" },
                    "uniqueItems": true
                },
                "itemsAwarded": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/Item" },
                    "uniqueItems": true
                }
            } 
        },
        "Contract": {
            "type": "object",
            "required": ["contractID"],
            "properties": {
                "contractID": { 
                    "type": "string"
                },
                "awardID": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "contractPeriod": {
                    "$ref": "#/definitions/Period"
                },
                "contractValue": {
                    "$ref": "#/definitions/Value"
                },
                "isAmendment": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["boolean", "null"]
                },
                "amendment": { "$ref": "#/definitions/Amendment" },
                "itemsContracted": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/Item" },
                    "uniqueItems": true
                },
                "deliverables": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/Deliverable" },
                    "uniqueItems": true
                },
                "signatureDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "attachments": {
                    "mergeStrategy": "ocdsVersion",
                    "type": "array",
                    "items": { "$ref": "#/definitions/Attachment" },
                    "uniqueItems": true
                }
            }
        },
        "Notice": {
            "type": "object",
            "properties": {
                "id": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "uri": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "publishedDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "isAmendment": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "type": ["boolean", "null"]
                },
                "amendment": { "$ref": "#/definitions/Amendment" }
            }
        },
        "Amendment": {
            "type": "object",
            "properties": {
                "amendmentDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "amendedFields": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                },
                "justification": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            }
        },
        "Period": {
            "type": "object",
            "properties": {
                "startDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "endDate": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"],
                    "format": "date-time"
                }
            }
        },
        "Attachment": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "uri": {
                    "type": ["string", "null"],
                    "format": "uri"
                },
                "lastModified": {
                    "type": ["string", "null"],
                    "format": "date-time"
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        },
        "Value": {
            "type": "object",
            "properties": {
                "amount": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["number", "null"],
                    "minimum": 0
                },
                "currency": {
                    "mergeStrategy": "ocdsVersion",
                    "type": ["string", "null"]
                }
            }
        },
        "Deliverable": {
            "__comment": "Does not have merge strategy fields as is always item in array, and array is versioned.",
            "type": "object",
            "properties": {
                "description": {
                    "type": ["string", "null"]
                },
                "dueDate": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "attachment": {
                    "$ref": "#/definitions/Attachment"
                }
            },
            "patternProperties": {
                "^(description_[A-Za-z]{2})$": {
                    "type": ["string", "null"]
                }
            }
        }
    }
}
